---
import { toTitle } from '../common/utils/toTitle';

export interface Props {
  breed: string
  href: string
}

const { href, breed } = Astro.props
---

<li class="card bg-secondary-200 dark:bg-secondary-500">
  <a href={href} class="flex flex-row justify-between dark:text-gray-50 text-gray-800">
    <h2 class="title-medium">
		{toTitle(breed)}
    </h2>
	<span class="material-symbols-outlined"> pets</span>
  </a>
</li>

<style>
	.card{
		@apply w-64 h-fit rounded-2xl p-4;
	}

</style>