---
import ThemeToggle from './ThemeToggleButton';

export interface Props {
  logo: string
  name: string
}

const { logo, name } = Astro.props
---

<header class="dark:text-gray-400 text-gray-800 body-font sticky top-0 z-50 backdrop-blur-md">
  <div
    class="container mx-auto flex flex-wrap px-5 py-3 md:flex-row justify-between items-center"
  >
    <a
      class="flex title-font font-medium items-center text-white mb-4 md:mb-0"
      href="/"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full"
        viewBox="0 0 24 24"
      >
        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
        ></path>
      </svg>
      <span class="ml-3 text-xl dark:text-gray-50 text-gray-800">{name}</span>
    </a>
    <button class="w-fit h-fit flex">
      <ThemeToggle client:visible />
    </button>
  </div>
</header>
