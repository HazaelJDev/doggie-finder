---
//Layout
import Layout from '../layouts/Layout.astro'
//Components
import Footer from '../components/Footer.astro'
import Nav from '../components/Nav.astro'
//Utils
import { getDogs } from '../common/utils/getDogs'
import MainCards from '../components/MainCards'
import HeroHome from '../components/HeroHome.astro'

const breeds = await getDogs();

---

<Layout title="DoggieFinder">
  <main class="bg-slate-100 dark:bg-slate-800">
    <Nav logo="/logo40x40.webp" name="DoggieFinder" />
    <HeroHome image="/hero.webp"/>
    <MainCards data={breeds} client:visible />
    <Footer
      logo="/logo40x40.webp"
      name="DoggieFinder"
      socialMedia={[
        'https://twitter.com/hazajdev',
        'https://www.instagram.com/hazadev/',
        'https://www.linkedin.com/in/hazael-jimenez/'
      ]}
    />
  </main>
</Layout>

<style>
  .MD-Main {
    background-color: var(--md-sys-color-primary-light);
  }
</style>
